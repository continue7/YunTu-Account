	<view class="top-container">
		<v-nav />
		<view class="title-container">
			<text class="title">十月</text>
		</view>
		<view class="amount-container">
			<view class="shouru-container">
				<text>收入（元）</text>
				<text class="amount-text">5560.50</text>
			</view>
			<view class="zhichu-container">
				<text>支出（元）</text>
				<text class="amount-text">499.00</text>
			</view>
		</view>
	</view>

	<scroll-view scroll-y show-scrollbar="{{false}}"	>
		<block wx:for="{{dataList}}" wx:key="index" wx:item="item">
			<view class="item-container">
				<image class="pivot" src="/images/pivot.png"></image>
				<text class="item-date">{{item.dateTime}}</text>
				<text class="item-amount">收入300，支出150</text>
			</view>
			<view class="shop-container">
				<block wx:for="{{item.list}}" wx:key="index" wx:for-item="record">
					<view class="shop-item-container">
						<image class="item-image" src="/images/yanjiu.png" />
						<text class="item-title">{{record.title}}</text>
						<text class="amount">{{record.amount}}</text>
					</view>
				</block>
			</view>
		</block>
	</scroll-view>

