page {
  width: 100%;
  height: 100%;
  /* background-color: wheat; */
}

.wraper {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  /* z-index: 99; */
  background-color: white;
}

.header-image {
  display: flex;
  flex-direction: ro;
  align-items: center;
  height: 88rpx;
  flex: 0 0 100rpx;
  /* 不放大不缩小固定100rpx */
}

.header-image image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 40rpx;
}

.header-date image {
  width: 40rpx;
  height: 40rpx;
}

