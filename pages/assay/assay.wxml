<view class="wrapper">
  <v-nav />
  <view class='header'>
    <view class="header-image">
      <view class="header-date">
        <date-tag bind:datechange="onDateChange" />
      </view>
    </view>
    <view class="header-amount">
      <view class="left">
        <text class="tip-text1">当月支出</text>
        <view class="left-tip1">
          <text class="">¥</text>
          <text class="tip-consume">{{billAmountData.consume}}</text>
        </view>
        <view class="left-tip2">
          <text class="tip-text">当月收入</text>
          <text class="tip-income">{{billAmountData.income}}</text>
        </view>
      </view>

      <view class="right">
        <view>
          <text class="tip-text">平均支出</text>
          <text class="tip-income">{{billAmountData.average}}</text>
        </view>
        <view>
          <text class="tip-text">当月结余</text>
          <text class="tip-income">{{billAmountData.balance}}</text>
        </view>
      </view>

    </view>
  </view>
  <view class="main">
    <text class="title">收支走势</text>
 

    <ec-canvas id="mychart-dom-line" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>

