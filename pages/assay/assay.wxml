          <l-progress l-class="progress" percent="{{item.percent}}"></l-progress>
        </view>
        <view class="number">
          <text class="amount">{{item.amount}}</text>
          <text class="percent">{{item.percent}}%</text>
        </view>
      </view>
    </block> -->
  </view>
  <view class="footer">

    <view class="footer-v footer-one-bg">
      <text class="footer-text">消费预算</text>
      <image class="footer-one-image" src="/images/progress.png"></image>
    </view>

    <view class="footer-v footer-two-bg">
      <text class="footer-text">消费方式</text>
      <image class="footer-two-image" src="/images/progress@pie.png"></image>
    </view>

  </view>
</view>