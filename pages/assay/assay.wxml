<view class="wrapper">
  <v-nav />
  <view class='header'>
    <view class="header-image">
      <view class="header-date" bind:tap="onSelectDate">
        <l-tag size="large" shape="circle" icon-color="#333333" plain="{{true}}" bg-color="#bfd9d3"
          font-color="#333333">2020 | 10月</l-tag>
      </view>
    </view>
    <view class="header-amount">
      <view class="left">
        <text class="tip-text1">当月支出</text>
        <view class="left-tip1">
          <text class="">¥</text>
          <text class="tip-consume">{{recordAmount.consume}}</text>
        </view>
        <view class="left-tip2">
          <text class="tip-text">当月支出</text>
          <text class="tip-income">{{recordAmount.income}}</text>
        </view>
      </view>

      <view class="right">
        <view>
          <text class="tip-text">平均支出</text>
          <text class="tip-income">{{recordAmount.budget}}</text>
        </view>
        <view>
          <text class="tip-text">当月结余</text>
          <text class="tip-income">{{recordAmount.balance}}</text>
        </view>
      </view>

    </view>
  </view>
  <view class="main">
    <text class="title">收支走势</text>
    <!-- <ec-canvas id="mychart-dom-pie" canvas-id="mychart-pie" ec="{{ ec }}" bind:tap="onTap"></ec-canvas> -->

    <ec-canvas id="mychart-dom-line" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>

