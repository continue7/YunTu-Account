.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  margin-top: 80rpx;
}

.tip {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  width: 400rpx;
  height: 100rpx;
  background-color: whitesmoke;
  border-radius: 10px;
}

.tip-image {
  width: 40rpx;
  height: 40rpx;
}

.tip-text {
  color: #bfd9d3;
  font-size: 32rpx;
  margin-left: 20rpx;
}

.main {
  width: 100%;
  margin-top: 80rpx;

}

.main-text {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999;
}

.grid {}

.grid image {
  width: 100rpx;
  height: 100rpx;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 10rpx 30rpx;
  border-radius: 10px;
  padding: 20rpx;
  background-color: whitesmoke;
}

.item text {
  margin-top: 10rpx;
}

