.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.grid-item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: whitesmoke;
}

.item-image {
  width: 60rpx;
  height: 60rpx;
}

.item-title {
  margin-left: 40rpx;
}

.item-amount {
  position: absolute;
  right: 40rpx;
  color: #16A83B;
  font-weight: bold;
}

.item-amount1 {
  position: absolute;
  right: 40rpx;
  color: #E46A6F;
  font-weight: bold;
}