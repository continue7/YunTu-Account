.container {
  width: 100%;
  height: 600rpx;
  margin-top: 30rpx;
}

.grid-item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;

  background-color: whitesmoke;
}

.grid-image {
  width: 60rpx;
  height: 60rpx;
}

.grid-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #333333;
}

.readySave {
  width: 100%;
  height: 120rpx;
  margin-top: 20rpx;
  background-color: #fff;
  /* border-radius: 10px 10px 10px 10px;
  box-shadow: 0px 0px 10px 0px rgba(245, 245, 245, 100); */
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}


.ready-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-left: 40rpx;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.ready-img {
  width: 60rpx;
  height: 60rpx;
}

.ready-title {
  margin-left: 40rpx;
}

.amount {
  width: 200rpx;
  height: 80rpx;
  position: absolute;
  right: 40rpx;
  font-size: 36rpx;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  color: blueviolet !important;
}


