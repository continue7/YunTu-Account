@import '../../wxss//header-amount.wxss';

.wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 10px;
  box-shadow: 0px 2px 10px 0px #efefef;
  margin-left: 20rpx;
  margin-right: 20rpx;
  position: relative;
  padding-bottom: 20rpx;
  margin-bottom: 20px;
}

.title {
  font-size: 28rpx;
  color: #333333;
  margin-top: 20rpx;
}

ec-canvas {
  margin-top: 15rpx;
  width: 100%;
  height: 600rpx;
}

.category-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
}


.footer {
  display: flex;
  flex-direction: row;
  padding: 0 40rpx 40rpx 0;
}

.footer-text {
  width: 250rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
  color: white;
}

.footer-v {
  height: 360rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
  border-radius: 10px;
}

.footer-one-bg {
  background-color: #ebb43e;
  box-shadow: 0px 2px 5px 0px #ebb43e;
}

.footer-one-image {
  width: 210rpx;
  height: 50rpx;
  margin-top: 160rpx;
}

.footer-two-image {
  width: 160rpx;
  height: 160rpx;
  margin-top: 100rpx;
}

.footer-two-bg {
  background-color: #8cc7b5;
  box-shadow: 0px 2px 5px 0px #8cc7b5;
}

.footer-three-bg {
  background-color: #333;
  box-shadow: 0px 2px 5px 0px #333;
}